<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
              http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
              http://www.springframework.org/schema/context
              http://www.springframework.org/schema/context/spring-context-3.0.xsd">
              
              
<bean id="dataSourcePostgre" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
	<property name="driverClassName" value="org.postgresql.Driver"></property>
	<property name="url" value="jdbc:postgresql://localhost/BbloveAndroid"></property>
	<property name="username" value="userBB"></property>
	<property name="password" value="Antoine"></property>
</bean>

<bean id="GetPostGre" class="fr.bb.android.postgre.GetPostGre">
<constructor-arg ref="dataSourcePostgre"></constructor-arg>
</bean>

</beans>
